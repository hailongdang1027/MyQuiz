<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="20dp"
    tools:context="com.example.myquiztest.QuizActivity">


    <TextView
        android:id="@+id/text_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_alignParentEnd="true"
        android:freezesText="true"
        />


    <TextView
        android:id="@+id/text_question_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_score"
        android:layout_alignParentEnd="true"
        android:freezesText="true"
        android:text="Question: 1/x"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/text_difficult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_question_count"
        android:layout_alignParentEnd="true"
        android:freezesText="true"
        android:text="Level: "
        android:textColor="@android:color/holo_red_dark" />


    <TextView
        android:id="@+id/text_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45sp"
        android:textColor="@android:color/black"
        android:text="00:30"
        android:layout_alignParentStart="true"
        android:freezesText="true"
        />

    <TextView
        android:id="@+id/text_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question text\nQuestion text\nQuestion text"
        android:textSize="20sp"
        android:layout_above="@+id/radio_group"
        android:layout_marginBottom="16dp"
        android:freezesText="true"
        android:textAlignment="center"
        android:textColor="@android:color/black"

        />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_difficult"
        android:layout_alignParentEnd="true"
        android:freezesText="true"
        android:text="Name: "
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/text_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_name"
        android:layout_alignParentEnd="true"
        android:freezesText="true"
        android:text="Subject: "
        android:textColor="@android:color/holo_red_dark" />



    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">

        <RadioButton
            android:id="@+id/radio_buttonA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:freezesText="true"
            />

        <RadioButton
            android:id="@+id/radio_buttonB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B"
            android:freezesText="true"
            />

        <RadioButton
            android:id="@+id/radio_buttonC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:freezesText="true"
            />

        <RadioButton
            android:id="@+id/radio_buttonD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D"
            android:freezesText="true"
            />

    </RadioGroup>

    <Button
        android:id="@+id/button_confirm_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_marginTop="15dp"
        android:layout_below="@id/radio_group"
        android:freezesText="true"/>
</RelativeLayout>